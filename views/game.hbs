<div class="container mx-auto p-4 bg-gray-900 text-gray-200">
    <h1 class="text-4xl font-bold ml-8 mb-4">{{results.name}}</h1>
    <div class="game-overview flex flex-col md:flex-row items-start md:space-x-4 mb-6">
        <img src="{{results.image}}" alt="{{results.name}} Image" class="game-image w-full md:w-1/3 rounded shadow-lg object-contain h-96 md:h-[420px]">
        <div class="about-section w-full md:w-2/3 mt-4 md:mt-0 flex flex-col bg-gray-800 p-4 rounded-md shadow-md">
            <div class="deck text-lg leading-relaxed h-[420px] overflow-y-auto p-2 border rounded-md border-gray-700 bg-gray-750">{{{results.description}}}</div>          
        </div>
    </div>

    <div class="release-date mb-4">
        <h2 class="text-2xl font-semibold mb-2">Release Date</h2>
        <ul class="platform-list">
            <li class="text-lg p-2 border rounded shadow bg-gray-800 border-gray-700">
                <p class="text-lg">{{results.original_release_date}}</p>
            </li>
        </ul>
    </div>
    
    <div class="platforms mb-4">
        <h2 class="text-2xl font-semibold mb-2">Platforms</h2>
        <ul class="platform-list grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2">
            {{#each results.platforms}}
            <li class="text-lg p-2 border rounded shadow bg-gray-800 border-gray-700">{{this}}</li>
            {{/each}}
        </ul>
    </div>

    <div class="video-container">
        <h2 class="text-2xl font-semibold mb-2">Review Videos</h2>
        <div class="flex space-x-4">
            {{#if youtube.length}}
                {{#each youtube}}
                <div class="video w-1/3">
                    <iframe src="https://www.youtube.com/embed/{{this}}" class="w-full h-64 shadow-lg" frameborder="0" allowfullscreen></iframe>
                </div>
                {{/each}}
            {{else}}
                <p class="text-xl text-gray-500">No review videos available.</p>
            {{/if}}
        </div>
    </div>
</div>
